/* pages/my/my-collection.wxss */
.container .list {
    padding-top: 30rpx;
    color: #6d7278;
    font-size: 28rpx;
    font-weight: 400;
  }
  .container .list .item {
    background-color: #fff;
    padding: 30rpx;
  }
  .container .list .item .name {
    font-size: 34rpx;
    color: #333;
    font-weight: 400;
    line-height: 48rpx;
    margin-top: 0;
  }
  .container .list .item view {
    margin-top: 20rpx;
    line-height: 40rpx;
  }
  .container .list .item view image {
    vertical-align: middle;
    width: 28rpx;
    height: 28rpx;
    margin-right: 22rpx;
  }
  .container .list .item view text {
    vertical-align: middle;
  }
  .container .list .item .desc {
    white-space: nowrap; 
    overflow: hidden;
    text-overflow:ellipsis;
  }
  .container .list .slot {
    display: flex;
    justify-content: flex-end;
    height: 100%;
    width: 135px;
  }
  .container .list .slot .get-addr {
    margin-left: 10px;
    flex-shrink: 1;
    width: 57.5px;
    padding: 0 10px;
    font-size: 17px;
    color: #fff;
    line-height: 24px;
    text-align: center;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #002fa7;
    border-radius: 8rpx;
    box-shadow: 0px 5px 20px 0px rgba(0, 47, 167, 0.28);
  }
  .container .list .slot .del-meeting {
    margin-left: 10px;
    flex-shrink: 1;
    width: 57.5px;
    padding: 0 10px;
    font-size: 17px;
    color: #fff;
    line-height: 24px;
    text-align: center;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f76260;
    border-radius: 8rpx;
    box-shadow: 0px 5px 20px 0px rgba(229, 91, 89, 0.27);
  }
  
  .van-swipe-cell {
    border-radius: 8px;
    margin-bottom: 30rpx;
    box-shadow: 0px 5px 20px 0px #e1e6ee;
  }
  .container .list .slot .collect {
    background-color: #c7cad0;
  }
  .container .list .slot .uncollect {
    background-color: #ffbe00;
  }
  .container .list .item .collection {
    width: 114rpx;
    height: 62rpx;
    position: absolute;
    top: 0;
    right: 0;
  }
  .container .empty-status .suc-wrapper {
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
    left: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .container  .empty-status .suc-wrapper image {
    width: 234rpx;
    height: 218rpx;
  }
  .container  .empty-status .suc-wrapper text {
    text-align: center;
    margin-top: 20rpx;
    font-size: 34rpx;
    color: #333;
  }
  .container  .empty-status .suc-wrapper text:last-child {
    font-size: 28rpx;
    color: #6d7278;
  }