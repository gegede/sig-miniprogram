/* pages/meeting/meeting.wxss */
.container .input-wraper {
  box-sizing: border-box;
  margin: 20rpx 0 30rpx;
  height: 108rpx;
  position: relative;
}
.container .input-wraper .keyword {
  padding-left: 94rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0px 5px 15px 0px rgba(225, 230, 238, 1);
  height: 108rpx;
  position: absolute;
  top: 0;
  width: 100%;
  font-size: 28rpx;
  line-height: 40rpx;
}
.container .input-wraper .search-icon {
  height: 39rpx;
  width: 39rpx;
  display: inline-block;
  position: absolute;
  top: 34rpx;
  left: 32rpx;
}
.container .list {
  color: #6d7278;
  font-size: 28rpx;
  font-weight: 400;
}
.container .list .item {
  padding: 30rpx;
  border-radius: 8px;
}
.container .list .item .name {
  font-size: 34rpx;
  color: #333;
  font-weight: 400;
  line-height: 48rpx;
  margin-top: 0;
}
.container .list .item view {
  margin-top: 20rpx;
  line-height: 40rpx;
}
.container .list .item view image {
  vertical-align: middle;
  width: 28rpx;
  height: 28rpx;
  margin-right: 22rpx;
}
.container .list .item view text {
  vertical-align: middle;
}
.container .list .item .desc {
  white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis;
}
.container .list .slot {
  display: flex;
  justify-content: flex-end;
  height: 100%;
  width: 135px;
}
.container .list .slot .get-addr {
  margin-left: 10px;
  flex-shrink: 1;
  width: 57.5px;
  padding: 0 10px;
  font-size: 17px;
  color: #fff;
  line-height: 24px;
  text-align: center;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #002fa7;
  border-radius: 8rpx;
  box-shadow: 0px 5px 20px 0px rgba(0, 47, 167, 0.28);
}
.container .list .slot .del-meeting {
  margin-left: 10px;
  flex-shrink: 1;
  width: 57.5px;
  padding: 0 10px;
  font-size: 17px;
  color: #fff;
  line-height: 24px;
  text-align: center;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f76260;
  border-radius: 8rpx;
  box-shadow: 0px 5px 20px 0px rgba(0, 47, 167, 0.28);
}

.van-swipe-cell {
  margin-bottom: 30rpx;
  box-shadow: 0px 5px 20px 0px rgba(229, 91, 89, 0.27);
  background-color: #fff;
}